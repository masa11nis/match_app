<div class="fh5co-loader"></div>
<div id="page">
    <%= render 'layouts/link' %>

	<header id="fh5co-header" class="fh5co-cover fh5co-cover-sm" role="banner" style="background-image:url(/images/img_bg_2.jpg);" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-center">
					<div class="display-t">
						<div class="display-tc animate-box" data-animate-effect="fadeIn">
                            <h1>Profile Edit (<%= @teacher.name %>)</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
    
    <div id="fh5co-project">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 animate-box fadeInUp animated-fast">
                    <%= form_with model: @teacher, method: :patch, local: true do |f| %>
                        <div class="field row form-group">
                            <%= f.label :name %>
                            <%= f.text_field :name, class: 'form-control' %>
                        </div>

                        <div class="field row form-group">
                            <%= f.label :age, "年齢" %>
                            <%= f.text_field :age, class: 'form-control' %>
                        </div>

                        <div class="field row form-group">
                            <%= f.label :email %>
                            <%= f.email_field :email, class: 'form-control' %>
                        </div>

                        <div class="field row form-group">
                            <%= f.label :skype_id %>
                            <%= f.text_field :skype_id, class: 'form-control' %>
                        </div>

                        <div class="field row form-group">
                            <%= f.label :university, "大学" %>
                            <%= f.text_field :university, class: 'form-control' %>
                        </div>

                        <div class="field row form-group">
                            <%= f.label :subject, "担当科目" %>
                            <%= f.text_field :subject, class: 'form-control' %>
                        </div>

                        <div class="field row form-group">
                            <%= f.label :reference_book, "得意な参考書" %>
                            <%= f.text_field :reference_book, class: 'form-control' %>
                        </div>

                        <div class="field row form-group">
                            <%= f.label :etc, "備考" %>
                            <%= f.text_field :etc, class: 'form-control' %>
                        </div>

                        <div class="field row form-group">
                            <%= f.label :password %>
                            <%= f.password_field :password, class: 'form-control' %>
                        </div>

                        <div class="field row form-group">
                            <%= f.label :password_confirmation %>
                            <%= f.password_field :password_confirmation, class: 'form-control' %>
                        </div>
                    
                        <div class="actions form-group">
                            <%= f.submit "Update", class: "btn btn-primary" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>